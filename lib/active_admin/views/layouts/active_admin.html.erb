<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8">
 
  <title><%= [@page_title, ActiveAdmin.site_title].join(" | ") %></title>

  <%= stylesheet_link_tag *ActiveAdmin.stylesheets %>
  <%= javascript_include_tag *ActiveAdmin.javascripts %>

</head>
<body>
<div id="wrapper">
  <div id="header">
    <h1 id="site_title"><%= ActiveAdmin.site_title %></h1>
    <%= ActiveAdmin.tabs_renderer.new(self).to_html(ActiveAdmin.menus[active_admin_config.menu_name]) %>
  </div>
  <div id="content">
    <div id="main_content_wrapper">
      <div id="main_content">
        <%= yield %>
      </div>
    </div>
    <div id="sidebar">
      <%= yield :sidebar %>
    </div>
 </div>
</div>
</body>
</html>
